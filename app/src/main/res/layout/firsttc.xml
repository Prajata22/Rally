<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:scrollbarStyle="outsideInset" android:id="@+id/scrollView1" android:background="#141517" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:isScrollContainer="true">
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TableRow android:layout_gravity="center" android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="24sp" android:textColor="#fff" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Tc :  " android:singleLine="true"/>
            <TextView android:textSize="24sp" android:textColor="#fff" android:layout_gravity="center" android:id="@+id/zone_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="1"/>
        </TableRow>
        <TextView android:textSize="18sp" android:textColor="#63a26b" android:layout_gravity="center_horizontal" android:id="@+id/odo_label" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="5dp" android:text="Leg Start Odo Reading in KM" android:singleLine="true"/>
        <EditText android:textSize="24sp" android:textColor="#fff" android:textColorHint="#545454" android:layout_gravity="center_horizontal" android:id="@+id/distance" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="250dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:hint="Tc Odo" android:inputType="numberDecimal">
            <requestFocus/>
        </EditText>
        <TextView android:textSize="18sp" android:textColor="#63a26b" android:layout_gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="5dp" android:text="Leg Start Time (24 hour format)" android:singleLine="true"/>
        <TableRow android:layout_gravity="center" android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <EditText android:textSize="24sp" android:textColor="#fff" android:textColorHint="#545454" android:layout_gravity="center_horizontal" android:id="@+id/hho" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:hint="hh" android:inputType="phone"/>
            <TextView android:textSize="20sp" android:textColor="#fff" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text=" : " android:singleLine="true"/>
            <EditText android:textSize="24sp" android:textColor="#fff" android:textColorHint="#545454" android:layout_gravity="center_horizontal" android:id="@+id/mmo" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:hint="mm" android:inputType="phone"/>
            <TextView android:textSize="20sp" android:textColor="#fff" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text=" : " android:singleLine="true"/>
            <EditText android:textSize="24sp" android:textColor="#fff" android:textColorHint="#545454" android:layout_gravity="center_horizontal" android:id="@+id/sso" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:hint="ss" android:inputType="phone"/>
        </TableRow>
        <LinearLayout android:orientation="horizontal" android:id="@+id/layout2" android:paddingLeft="6dp" android:paddingRight="6dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_weight="1">
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#63a26b" android:gravity="top" android:padding="2dp" android:layout_width="match_parent" android:layout_height="match_parent" android:text="Distance Unit Preference " android:maxLines="1" android:lines="1"/>
                </LinearLayout>
                <TextView android:textSize="16sp" android:textColor="#fff" android:gravity="top" android:id="@+id/preference" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="2dp" android:text="Distances in KMs  "/>
            </LinearLayout>
            <ImageButton android:layout_gravity="center_vertical" android:id="@+id/distance_set" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/select1"/>
        </LinearLayout>
        <Button android:textSize="24sp" android:textStyle="bold" android:textColor="#fff" android:layout_gravity="center" android:id="@+id/save" android:background="@drawable/next_button_background_selector" android:padding="6dp" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginTop="6dp" android:text="Next"/>
        <TextView android:textSize="14sp" android:textColor="#fff" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginTop="12dp" android:text="1. Define Leg Start Point Odo and Time here"/>
        <TextView android:textSize="14sp" android:textColor="#fff" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginTop="6dp" android:text="2. Next define Speed Chart information. Enter Segment End Distance and Speed Value in kmph or mph. Speed segment Start Odo is assumed as Previous Segment End Odo."/>
        <TextView android:textSize="14sp" android:textColor="#fff" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginTop="6dp" android:text="3. Click hackTSD button for Leg Analytics."/>
        <TextView android:textSize="14sp" android:textColor="#fff" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginTop="6dp" android:text="4. Correct Odo, Enter New Tc, Add-Edit Speed Chart Info as and when required."/>
    </LinearLayout>
</ScrollView>
