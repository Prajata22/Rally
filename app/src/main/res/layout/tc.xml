<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:scrollbarStyle="outsideInset" android:id="@+id/scrollView1" android:background="#141517" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:isScrollContainer="true">
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:id="@+id/driver_photo1" android:paddingLeft="6dp" android:paddingRight="6dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical"
                          android:layout_width="332dp" android:layout_height="97dp"
                          android:layout_marginLeft="6dp" android:layout_weight="1">
                <TextView android:textSize="24sp" android:textColor="#ffffff" android:layout_width="match_parent"
                          android:layout_height="wrap_content" android:layout_marginLeft="12dp"
                          android:text="Enter TC No." android:singleLine="true"/>
                <EditText android:textSize="24sp" android:textStyle="bold" android:textColor="#fff"
                          android:textColorHint="#545454" android:id="@+id/zone_number"
                          android:layout_width="match_parent" android:layout_height="33dp"
                          android:hint="Enter Tc Number" android:singleLine="true" android:inputType="phone"/>
            </LinearLayout>
            <ImageButton android:layout_gravity="center_vertical" android:id="@+id/go" android:layout_width="50dp"
                         android:layout_height="50dp" android:src="@drawable/check"/>
        </LinearLayout>
        <TableRow android:layout_gravity="center_horizontal" android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp">
            <Button android:textSize="24sp" android:textStyle="bold" android:textColor="#fff" android:id="@+id/first" android:background="@drawable/btn_blue" android:paddingTop="6dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:text="First" android:layout_weight="1"/>
            <Button android:textSize="24sp" android:textStyle="bold" android:textColor="#fff" android:id="@+id/last" android:background="@drawable/btn_blue" android:paddingTop="6dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_marginLeft="25dp" android:text="Last" android:layout_weight="1"/>
        </TableRow>
        <LinearLayout android:orientation="horizontal" android:id="@+id/driver_photo2" android:paddingLeft="6dp"
                      android:paddingRight="6dp" android:layout_width="match_parent" android:layout_height="80dp">
            <Button android:textSize="24sp" android:textColor="#fff" android:layout_gravity="center_vertical"
                    android:id="@+id/back" android:layout_width="50dp" android:layout_height="50dp" android:text="-"/>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical"
                          android:layout_width="0px" android:layout_height="wrap_content"
                          android:layout_marginLeft="6dp" android:layout_weight="1">
                <TableRow android:layout_gravity="center" android:id="@+id/tableRow2"
                          android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="24sp" android:textColor="#ffffff" android:layout_gravity="center"
                              android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:text="TC" android:singleLine="true"/>
                    <TextView android:textSize="24sp" android:textColor="#fff" android:layout_gravity="center"
                              android:id="@+id/zone_tv" android:layout_width="match_parent"
                              android:layout_height="wrap_content"/>
                </TableRow>
            </LinearLayout>
            <Button android:textSize="24sp" android:textColor="#fff" android:layout_gravity="center_vertical"
                    android:id="@+id/next" android:layout_width="50dp" android:layout_height="50dp" android:text="+"/>
        </LinearLayout>
        <TextView android:textSize="24sp" android:textColor="#ffffff" android:layout_gravity="center_horizontal"
                  android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="5dp" android:text="        Enter TC OD"
                  android:singleLine="true"/>
        <EditText android:textSize="20sp" android:textColor="#fff" android:textColorHint="#545454" android:layout_gravity="center_horizontal" android:id="@+id/distance" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="250dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:hint="Tc Odo" android:inputType="numberDecimal">
            <requestFocus/>
        </EditText>
        <TextView android:textSize="24sp" android:textColor="#ffffff" android:layout_gravity="center_horizontal"
                  android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="5dp" android:text="        Enter Time HH:MM:SS" android:singleLine="true"/>
        <TableRow android:layout_gravity="center" android:id="@+id/tableRow3"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
            <EditText android:textSize="24sp" android:textColor="#fff" android:textColorHint="#545454"
                      android:layout_gravity="center_horizontal" android:id="@+id/hhi" android:paddingLeft="10dp"
                      android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp"
                      android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="5dp" android:hint="hh" android:inputType="phone"/>
            <TextView android:textSize="20sp" android:textColor="#fff" android:layout_gravity="center"
                      android:layout_width="match_parent" android:layout_height="wrap_content" android:text=" : "
                      android:singleLine="true"/>
            <EditText android:textSize="24sp" android:textColor="#fff" android:textColorHint="#545454"
                      android:layout_gravity="center_horizontal" android:id="@+id/mmi" android:paddingLeft="10dp"
                      android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp"
                      android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="5dp" android:hint="mm" android:inputType="phone"/>
            <TextView android:textSize="20sp" android:textColor="#fff" android:layout_gravity="center"
                      android:layout_width="match_parent" android:layout_height="wrap_content" android:text=" : "
                      android:singleLine="true"/>
            <EditText android:textSize="24sp" android:textColor="#fff" android:textColorHint="#545454"
                      android:layout_gravity="center_horizontal" android:id="@+id/ssi" android:paddingLeft="10dp"
                      android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp"
                      android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="5dp" android:hint="ss" android:inputType="phone"/>
        </TableRow>
        <TextView android:textSize="24sp" android:textColor="#ffffff" android:layout_gravity="center_horizontal"
                  android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="15dp" android:text="        Check-out Time"
                  android:singleLine="true"/>
        <TableRow android:layout_gravity="center" android:id="@+id/tableRow4" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <EditText android:textSize="24sp" android:textColor="#fff" android:textColorHint="#545454" android:layout_gravity="center_horizontal" android:id="@+id/hho" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:hint="hh" android:inputType="phone"/>
            <TextView android:textSize="20sp" android:textColor="#fff" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text=" : " android:singleLine="true"/>
            <EditText android:textSize="24sp" android:textColor="#fff" android:textColorHint="#545454" android:layout_gravity="center_horizontal" android:id="@+id/mmo" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:hint="mm" android:inputType="phone"/>
            <TextView android:textSize="20sp" android:textColor="#fff" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text=" : " android:singleLine="true"/>
            <EditText android:textSize="24sp" android:textColor="#fff" android:textColorHint="#545454" android:layout_gravity="center_horizontal" android:id="@+id/sso" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:hint="ss" android:inputType="phone"/>
        </TableRow>
        <Button android:textSize="34sp" android:textStyle="bold" android:textColor="#fff"
                android:layout_gravity="center" android:id="@+id/save" android:background="@drawable/btn_blue"
                android:padding="6dp" android:layout_width="400dp" android:layout_height="70dp"
                android:layout_marginTop="6dp" android:layout_marginBottom="6dp" android:text="Save"/>
    </LinearLayout>
</ScrollView>
