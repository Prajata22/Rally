<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:scrollbarStyle="outsideInset" android:id="@+id/scrollView1" android:background="#141517" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:isScrollContainer="true">
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:id="@+id/driver_photo" android:paddingLeft="6dp" android:paddingRight="6dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="0px" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_weight="1">
                <TextView android:textSize="18sp" android:textColor="#63a26b" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Enter Odo Reading: " android:singleLine="true"/>
                <EditText android:textSize="20sp" android:textStyle="bold" android:textColor="#fff" android:textColorHint="#545454" android:id="@+id/zone_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Enter Odo in Km" android:inputType="numberDecimal"/>
            </LinearLayout>
            <ImageButton android:layout_gravity="center_vertical" android:id="@+id/go" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/check"/>
        </LinearLayout>
        <TableRow android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="20sp" android:textColor="#fff" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="RoadBook: "/>
            <TextView android:textSize="32sp" android:textColor="#fff" android:layout_gravity="center" android:id="@+id/rbodo_tv" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="20sp" android:textColor="#000" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="GPS Odo :  "/>
            <TextView android:textSize="24sp" android:textColor="#000" android:layout_gravity="center" android:id="@+id/gpsodo_tv" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="20sp" android:textColor="#000" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Car Odo :  "/>
            <TextView android:textSize="24sp" android:textColor="#000" android:layout_gravity="center" android:id="@+id/carodo_tv" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="36sp" android:textColor="#fff" android:layout_gravity="center" android:id="@+id/hh_tv" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:textSize="36sp" android:textColor="#fff" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text=" : "/>
            <TextView android:textSize="36sp" android:textColor="#fff" android:layout_gravity="center" android:id="@+id/mm_tv" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:textSize="36sp" android:textColor="#fff" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text=" : "/>
            <TextView android:textSize="36sp" android:textColor="#fff" android:layout_gravity="center" android:id="@+id/ss_tv" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="#fff" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="current Speed :  "/>
            <TextView android:textSize="20sp" android:textColor="#fff" android:layout_gravity="center" android:id="@+id/currentspeed_tv" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="#000" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Next Speed :  "/>
            <TextView android:textSize="20sp" android:textColor="#000" android:layout_gravity="center" android:id="@+id/nextspeed_tv" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="#000" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Speed Change Odo :  "/>
            <TextView android:textSize="20sp" android:textColor="#000" android:layout_gravity="center" android:id="@+id/change_tv" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="#000" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Change Time :  "/>
            <TextView android:textSize="20sp" android:textColor="#000" android:layout_gravity="center" android:id="@+id/changetime_tv" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </TableRow>
    </LinearLayout>
</ScrollView>
