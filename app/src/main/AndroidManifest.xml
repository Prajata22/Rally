        <activity
            android:name="EnterTc"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
        <activity
            android:name="About"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
        <activity
            android:name="Calculation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
        <activity
            android:name="Correction"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
        <activity
            android:name="EnterSpeedChart"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
        <activity
            android:name="EnterRoadBook"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
        <activity
            android:name="WorkRoadBook"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
        <service
            android:label="@string/locationservice_name"
            android:name="GPSTracker"
            android:enabled="true"/>
    </application>

</manifest>
