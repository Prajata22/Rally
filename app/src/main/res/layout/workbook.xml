<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:scrollbarStyle="outsideInset" android:id="@+id/scrollView1" android:background="#141517" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:isScrollContainer="true">
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:id="@+id/driver_photo" android:paddingLeft="6dp"
                      android:paddingRight="6dp" android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <Button android:textSize="10sp" android:textColor="#fff" android:layout_gravity="top"
                    android:id="@+id/first" android:layout_width="48sp" android:layout_height="48sp"
                    android:layout_marginTop="4dp" android:scaleType="fitCenter" android:adjustViewBounds="true"
                    android:text="0.01"/>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical"
                          android:layout_width="0px" android:layout_height="wrap_content"
                          android:layout_marginLeft="6dp" android:layout_weight="1">
                <Button android:textSize="16sp" android:textStyle="bold" android:textColor="#fff" android:id="@+id/save"
                        android:background="@drawable/btn_blue" android:paddingTop="6dp" android:paddingBottom="6dp"
                        android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="6dp"
                        android:layout_marginTop="6dp" android:layout_marginRight="6dp"
                        android:layout_marginBottom="6dp" android:text="Correct Odometer" android:layout_weight="1"/>
            </LinearLayout>
            <Button android:textSize="10sp" android:textColor="#fff" android:layout_gravity="center_vertical"
                    android:id="@+id/last" android:layout_width="48dp" android:layout_height="48dp"
                    android:text="0.01"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:paddingLeft="6dp" android:paddingRight="6dp"
                      android:layout_width="match_parent" android:layout_height="192dp">
            <Button android:textSize="24sp" android:textColor="#fff" android:layout_gravity="center_vertical"
                    android:id="@+id/back" android:layout_width="50dp" android:layout_height="200dp" android:text="-"/>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical"
                          android:layout_width="0px" android:layout_height="180dp"
                          android:layout_marginLeft="6dp" android:layout_weight="1">
                <LinearLayout android:layout_gravity="center|top" android:orientation="horizontal"
                              android:layout_width="290dp" android:layout_height="wrap_content"
                              android:layout_marginLeft="2dp" android:layout_weight="1"
                              android:layout_marginStart="2dp">
                    <TextView android:textSize="16sp" android:textColor="#ffffff" android:id="@+id/status_tv"
                              android:layout_width="105dp" android:layout_height="wrap_content"
                              android:layout_marginLeft="6dp" android:text="OD"/>
                    <TableRow android:layout_gravity="center" android:layout_width="wrap_content"
                              android:layout_height="wrap_content" android:layout_marginLeft="25dp">
                        <TextView android:textSize="14sp" android:textColor="#fff" android:layout_gravity="center"
                                  android:id="@+id/error_tv" android:layout_width="match_parent"
                                  android:layout_height="wrap_content"/>
                    </TableRow>
                    <TextView android:textSize="12sp" android:textColor="#ffffff"
                              android:layout_gravity="center|top|center_vertical"
                              android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:text="Accuracy :  " android:singleLine="true"/>
                </LinearLayout>
                <LinearLayout android:layout_gravity="center" android:orientation="horizontal"
                              android:layout_width="290dp" android:layout_height="wrap_content"
                              android:layout_marginLeft="2dp" android:layout_weight="1"
                              android:layout_marginStart="2dp">
                    <TextView android:textSize="60sp" android:textStyle="bold" android:textColor="#fff"
                              android:layout_gravity="center" android:id="@+id/rbodo_tv"
                              android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:layout_marginLeft="6dp" android:text="-"/>
                </LinearLayout>
            </LinearLayout>
            <Button android:textSize="24sp" android:textColor="#fff" android:layout_gravity="center_vertical"
                    android:id="@+id/next" android:layout_width="50dp" android:layout_height="200dp" android:text="+"/>
        </LinearLayout>
        <TableRow android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp">
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#fff" android:layout_gravity="center" android:id="@+id/zone_tv" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:textSize="16sp" android:textColor="#fff" android:layout_gravity="center" android:id="@+id/zone_label_tv" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:textSize="12sp" android:textColor="#fff" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text=" on total penalty of "/>
            <TextView android:textSize="16sp" android:textColor="#fff" android:layout_gravity="center" android:id="@+id/total_penalty" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow android:layout_gravity="center" android:layout_width="126dp" android:layout_height="wrap_content"
                  android:layout_marginTop="6dp">
            <TextView android:textSize="24sp" android:textColor="#fff" android:layout_gravity="center"
                      android:id="@+id/hh_tv" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:textSize="24sp" android:textColor="#fff" android:layout_gravity="center"
                      android:layout_width="match_parent" android:layout_height="wrap_content" android:text=" : "/>
            <TextView android:textSize="24sp" android:textColor="#fff" android:layout_gravity="center"
                      android:id="@+id/mm_tv" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:textSize="24sp" android:textColor="#fff" android:layout_gravity="center"
                      android:layout_width="match_parent" android:layout_height="wrap_content" android:text=" : "/>
            <TextView android:textSize="24sp" android:textColor="#fff" android:layout_gravity="center"
                      android:id="@+id/ss_tv" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </TableRow>
        <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:id="@+id/middlebar1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
            <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:background="#141517" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:background="#141517" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView android:textSize="10sp" android:textStyle="bold" android:textColor="#FFFFFF"
                              android:gravity="center" android:layout_width="match_parent"
                              android:layout_height="wrap_content" android:text="Actual Speed"/>
                    <TextView android:textSize="34sp" android:textColor="#fff" android:gravity="center"
                              android:layout_gravity="center" android:id="@+id/actualspeed_tv"
                              android:layout_width="match_parent" android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:background="#141517" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView android:textSize="10sp" android:textStyle="bold" android:textColor="#FFFFFF"
                              android:gravity="center" android:layout_width="match_parent"
                              android:layout_height="wrap_content" android:text="Given Speed"/>
                    <TextView android:textSize="24sp" android:textColor="#fff" android:gravity="center"
                              android:layout_gravity="center" android:id="@+id/currentspeed_tv"
                              android:layout_width="match_parent" android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:background="#141517" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView android:textSize="10sp" android:textStyle="bold" android:textColor="#FFFFFF"
                              android:gravity="center" android:layout_width="match_parent"
                              android:layout_height="wrap_content" android:text="Last Tc Odo"
                              android:singleLine="true"/>
                    <TextView android:textSize="24sp" android:textColor="#fff" android:gravity="center"
                              android:layout_gravity="center" android:id="@+id/last_tc"
                              android:layout_width="match_parent" android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:background="#141517" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView android:textSize="10sp" android:textStyle="bold" android:textColor="#FFFFFF"
                              android:gravity="center" android:layout_width="match_parent"
                              android:layout_height="wrap_content" android:text="Prev Check-in"
                              android:singleLine="true"/>
                    <TextView android:textSize="24sp" android:textColor="#fff" android:gravity="center"
                              android:layout_gravity="center" android:id="@+id/last_tc_time"
                              android:layout_width="match_parent" android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:id="@+id/middlebar2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
            <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:background="#141517" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:background="#141517" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView android:textSize="10sp" android:textStyle="bold" android:textColor="#000" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Next Speed"/>
                    <TextView android:textSize="24sp" android:textColor="#fff" android:gravity="center"
                              android:layout_gravity="center" android:id="@+id/nextspeed_tv"
                              android:layout_width="match_parent" android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:background="#141517" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView android:textSize="10sp" android:textStyle="bold" android:textColor="#000" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Next Speed Odo"/>
                    <TextView android:textSize="24sp" android:textColor="#fff" android:gravity="center"
                              android:layout_gravity="center" android:id="@+id/change_tv"
                              android:layout_width="match_parent" android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:background="#141517" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView android:textSize="10sp" android:textStyle="bold" android:textColor="#000" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Next Speed Time" android:singleLine="true"/>
                    <TextView android:textSize="24sp" android:textColor="#fff" android:gravity="center"
                              android:layout_gravity="center" android:id="@+id/changetime_tv"
                              android:layout_width="match_parent" android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View android:background="#ffd0d1d2" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="8dp" android:layout_marginBottom="3dp"/>
    </LinearLayout>
</ScrollView>
